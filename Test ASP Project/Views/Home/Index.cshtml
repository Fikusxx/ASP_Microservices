@model IEnumerable<Employee>

@{
	ViewBag.Title = "Employee List";

}

<h1>Sample Header</h1>

<div class="card-deck">
	@foreach (var employee in Model)
	{
		var photopath = "~/images/" + (employee.PhotoPath ?? "image.jpg");

		<div class="card m-3">
			<div class="card-header">
				<h3>@employee.Name</h3>
			</div>

			<div class="card-footer text-center">
				<a asp-controller="home" asp-action="details" asp-route-id="@employee.EncryptedId"
			   class="btn btn-primary m-1">Display</a>
				<a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id"
			   class="btn btn-primary m-1">Edit</a>
				<a href="#" class="btn btn-primary m-1">Delete</a>
			</div>
		</div>
	}
</div>

@section Scripts
	{
	<script src="~/js/customscript.js"></script>
}
