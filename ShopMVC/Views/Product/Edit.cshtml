@model EditProductViewModel

@{
	ViewData["Title"] = "Edit Product";
	var photoPath = WebConstants.ImagePath + Model.PhotoPath;
}

<form asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">

	<div class="row">
		<div class="col-7">

			<h2 class="text-primary mt-4"> Edit Product </h2>
			<hr />

			<div asp-validation-summary="All" class="text-danger"></div>

			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="PhotoPath" />


			<div class="mb-3">
				<label asp-for="Name" class="form-label"> Name </label>
				<input asp-for="Name" class="form-control col-4">
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Price" class="form-label"> Price </label>
				<input asp-for="Price" class="form-control">
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="ShortDescription" class="form-label"> Short Description </label>
				<input asp-for="ShortDescription" class="form-control">
			</div>

			<div class="mb-3">
				<label asp-for="Description" class="form-label"> Description </label>
				<textarea asp-for="Description" class="form-control" rows="3" placeholder="Optional product description"></textarea>
			</div>

			<div class="mb-3">
				<label asp-for="CategoryId" class="form-label"> Category Type </label>
				<select asp-for="CategoryId" class="form-select" asp-items=@Model.CategorySelectList>
					<option disabled selected> Choose Category </option>
				</select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="ApplicationTypeId" class="form-label"> Application Type </label>
				<select asp-for="ApplicationTypeId" class="form-select" asp-items=@Model.ApplicationTypesSelectList>
					<option disabled selected> Choose Application Type </option>
				</select>
				<span asp-validation-for="ApplicationTypeId" class="text-danger"></span>
			</div>

			<div class="form-group row">
				<label asp-for="Image" class="col-sm-2 col-form-label"> Photo </label>
				<div class="custom-file">
					<input asp-for="Image" class="form-control" class="form-control custom-file-input" />
					<label class="custom-file-label"> </label>
					<span asp-validation-for="Image" class="text-danger"></span>
				</div>
			</div>

			<button type="submit" class="btn btn-success"> Update </button>
			<a asp-controller="Product" asp-action="Index" class="btn btn-danger">
				<i class="fa fa-sign-out-alt"></i> Back
			</a>
		</div>

		<div class="col-5">
			<img class="align-content-center" src="@photoPath" width="100%" height="50%" style="border-radius:5px; border: 1px solid #bbb" asp-append-version="true" />
		</div>

	</div>

</form>

@section Scripts{
	@await Html.PartialAsync("_ValidationScriptsPartial");
    }