@model IEnumerable<Product>

@{
	ViewData["Title"] = "Index";
}

<h1> INDEX </h1>

<div class="container p-3">
	<div class="row pt-4">

		<div class="col-6">
			<h2 class="text-primary"> Product List </h2>
		</div>

		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
				<i class="fas fa-plus"></i> New Product
			</a>
		</div>

	</div>

	<br />

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">

			<thead>
				<tr>
					<th> Name </th>
					<th> Price </th>
					<th> Category </th>
					<th> Application Type </th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				@foreach (var product in Model)
				{
					<tr>
						<td style="width:30%"> @product.Name </td>
						<td style="width:10%"> @product.Price </td>
						<td style="width:20%"> @product.Category.Name </td>
						<td style="width:20%"> @product.ApplicationType.Name </td>
						<td class="text-center">
							<div>
								<a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary mx-1">
									<i class="fas fa-edit"></i>
								</a>
								<a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-1">
									<i class="fas fa-trash-alt"></i>
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>

		</table>
	}
	else
	{
		<p> No products exist. </p>
	}
</div>