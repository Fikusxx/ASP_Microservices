@model DeleteProductViewModel

@{
	ViewData["Title"] = "Delete Product";
	var photoPath = WebConstants.ImagePath + Model.PhotoPath;
}

<form asp-controller="Product" asp-action="Delete" method="post" enctype="multipart/form-data">

	<div class="row">
		<div class="col-7">

			<h2 class="text-primary mt-4"> Delete Product </h2>
			<hr />

			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="PhotoPath" />

			<div class="mb-3">
				<label asp-for="Name" class="form-label"> Name </label>
				<input asp-for="Name" disabled class="form-control col-4">
			</div>

			<div class="mb-3">
				<label asp-for="Price" class="form-label"> Price </label>
				<input asp-for="Price" disabled class="form-control">
			</div>

			<div class="mb-3">
				<label asp-for="ShortDescription" class="form-label"> Short Description </label>
				<input asp-for="ShortDescription" disabled class="form-control">
			</div>

			<div class="mb-3">
				<label asp-for="Description" class="form-label"> Description </label>
				<textarea asp-for="Description" disabled class="form-control" rows="3" placeholder="Optional product description"></textarea>
			</div>

			<div class="mb-3">
				<label asp-for="CategoryId" class="form-label"> Category Type </label>
				<select asp-for="CategoryId" disabled class="form-select" asp-items=@Model.CategorySelectList>
				</select>
			</div>

			<div class="mb-3">
				<label asp-for="ApplicationTypeId" class="form-label"> Category Type </label>
				<select asp-for="ApplicationTypeId" disabled class="form-select" asp-items=@Model.ApplicationTypesSelectList>
				</select>
			</div>

			<button type="submit" class="btn btn-success"> Delete </button>
			<a asp-controller="Product" asp-action="Index" class="btn btn-danger">
				<i class="fa fa-sign-out-alt"></i> Back
			</a>
		</div>

		<div class="col-5">
			<img class="align-content-center" src="@photoPath" width="100%" height="50%" style="border-radius:5px; border: 1px solid #bbb" asp-append-version="true" />
		</div>

	</div>

</form>

