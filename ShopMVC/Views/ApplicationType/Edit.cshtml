@model ApplicationType

@{
	ViewData["Title"] = "Edit Application Type";
}

<h2 class="text-primary mt-4"> Edit Application Type </h2>
<hr />

<form asp-controller="ApplicationType" asp-action="Edit" method="post">

	<div asp-validation-summary="All" class="text-danger"></div>

	<input type="hidden" asp-for="Id" />

	<div class="mb-3">
		<label asp-for="Name" class="form-label"> Name </label>
		<input asp-for="Name" class="form-control col-4">
		<div class="form-text"> Enter category name </div>
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-success"> Update </button>
	<a asp-controller="ApplicationType" asp-action="Index" class="btn btn-danger">
		<i class="fa fa-sign-out-alt"></i> Back
	</a>

</form>

@section Scripts{
	@await Html.PartialAsync("_ValidationScriptsPartial");
    }