@model IEnumerable<Category>

@{
	ViewData["Title"] = "Index";
}

<h1> INDEX </h1>

<div class="container p-3">
	<div class="row pt-4">

		<div class="col-6">
			<h2 class="text-primary"> Category List </h2>
		</div>

		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="fas fa-plus"></i> New Category
			</a>
		</div>

	</div>

	<br />

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">

			<thead>
				<tr>
					<th> Category Name </th>
					<th> Display Order </th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				@foreach (var category in Model)
				{
					<tr>
						<td style="width:50%"> @category.Name </td>
						<td style="width:30%"> @category.DisplayOrder </td>
						<td class="text-center">
							<div>
								<a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-1">
									<i class="fas fa-edit"></i>
								</a>
								<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-1">
									<i class="fas fa-trash-alt"></i>
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>

		</table>
	}
	else
	{
		<p> No categories exist. </p>
	}
</div>